{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./api",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/config/*": ["src/config/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/schemas/*": ["src/schemas/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/jobs/*": ["src/jobs/*"],
      "@/plugins/*": ["src/plugins/*"]
    }
  },
  "include": ["api/index.ts"],
  "exclude": []
}

